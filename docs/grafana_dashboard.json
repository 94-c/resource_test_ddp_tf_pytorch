          {
            "expr": "count by(GPU_I_PROFILE) (DCGM_FI_PROF_GR_ENGINE_ACTIVE{pod=\"$pod\"})",
            "legendFormat": "인스턴스 개수",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "displayMode": "table",
              "inspect": false
            },
            "mappings": [],
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "red",
